<div class="container">
  <div class="header__inner">
    <a class="logo" href="{{ site.url }}" role="banner">
      <svg width="74" height="74" xmlns="http://www.w3.org/2000/svg">
        <g fill-rule="nonzero" fill="none">
          <circle fill="#EA1919" cx="37" cy="37" r="37" />
          <path d="M37.237 48.388c-4.493 0-8.869-1.452-12.486-3.37L23 52.688C26.384 54.606 31.636 56 37.062 56 46.632 56 52 51.12 52 44.205c0-6.914-5.835-9.471-11.437-10.982-4.376-1.22-7.702-2.15-7.702-4.532 0-1.975 1.576-3.08 4.785-3.08 3.618 0 8.169 1.279 11.787 3.196l1.808-7.611C47.741 19.278 43.306 18 37.588 18c-9.045 0-14.004 4.474-14.004 11.214 0 7.263 6.418 9.703 11.728 11.156 4.843 1.336 7.469 2.15 7.469 4.59 0 2.208-2.276 3.428-5.544 3.428z"
            fill="#FFF" />
        </g>
      </svg>
    </a>
    <nav class="nav-main" role="navigation">
      <ul>
        {% for item in menu_main.items %}
          {% if 'nav-login' in item.classes %}
            <li class="nav-login">
              <a class="btn btn-sm btn-outline-primary" href="{{ item.link }}">
                {{ item.title }}
              </a>
            </li>
          {% else %}
            <li class="{{ item.classes|join(' ') }}">
              <a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      <div class="utility">
        <a class="nav-open" href="#open-nav">
          <svg class="icon-menu"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 37 23">
            <path fill="none"
              fill-rule="evenodd"
              stroke="#000"
              stroke-linecap="round"
              stroke-width="3"
              d="M2.375 21.5h32.25m-32.25-20h32.25m-32.25 10h32.25" />
          </svg>
          <svg class="icon-close"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 27 27">
            <g fill="none"
              fill-rule="evenodd"
              stroke="#000"
              stroke-linecap="round"
              stroke-width="4">
              <path d="M2.0979032 2.0979032l22.8041936 22.8041936M2.0979032 24.9020968L24.9020968 2.0979032" />
            </g>
          </svg>
        </a>
      </div>
    </nav>
  </div>
</div>
